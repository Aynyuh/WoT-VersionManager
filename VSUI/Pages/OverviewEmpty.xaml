<Page x:Class="VersionManagerUI.Pages.OverviewEmpty"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VersionManagerUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="OverviewEmpty">

    <StackPanel>
        <TextBlock FontFamily="Segoe UI Light" FontSize="20" Margin="0,0,0,10" TextWrapping="Wrap">
            Seems like you don't have any World of Tanks versions imported yet!
        </TextBlock>
        <TextBlock FontFamily="Segoe UI Light" FontSize="15" Margin="0,0,0,10" TextWrapping="Wrap">
            Head over to the <Bold>Import</Bold> tab to import your first game version.
        </TextBlock>
    </StackPanel>
    <d:DesignerProperties.DesignStyle>
        <Style TargetType="Page">
            <Setter Property="Background" Value="White"></Setter>
        </Style>
    </d:DesignerProperties.DesignStyle>
</Page>
