<Page x:Class="Debugging.Tools.Logo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Debugging.Tools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Logo">

    <DockPanel>
        <TextBlock DockPanel.Dock="Top" FontSize="20" HorizontalAlignment="Center">Debugging tool for WoT Version Manager</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" FontSize="16" HorizontalAlignment="Center">Made by noobkiller3759.
            <Hyperlink NavigateUri="http://forum.worldoftanks.eu/index.php?/topic/755268-" RequestNavigate="Hyperlink_RequestNavigate">
                EU Forum Link
            </Hyperlink>
        </TextBlock>
        <Image Source="{StaticResource VMLogo}" Margin="20"></Image>
    </DockPanel>
    <d:DesignerProperties.DesignStyle>
        <Style TargetType="Page">
            <Setter Property="Background" Value="White"></Setter>
        </Style>
    </d:DesignerProperties.DesignStyle>
</Page>
